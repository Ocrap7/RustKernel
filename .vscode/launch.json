    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'RustKernel'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=RustKernel",
                    "--package=RustKernel"
                ],
                "filter": {
                    "name": "RustKernel",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "program": "D:\\Developement\\Projects\\RustKernel\\target\\x86_64-unknown-uefi\\debug\\RustKernel.efi",
            "name": "LLDB",
            "cwd": "${workspaceFolder}",
            "miDebuggerServerAddress" : "localhost:1234",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'RustKernel'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=RustKernel",
                    "--package=RustKernel"
                ],
                "filter": {
                    "name": "RustKernel",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}